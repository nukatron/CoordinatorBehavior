<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nutron.coordinatorbehavior">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".presentation.MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".presentation.main.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.scrolling.ScrollingActivity"
            android:label="@string/title_activity_scrolling"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".presentation.floatingbottom.FloatingBottomActivity"
            android:label="@string/title_activity_floating_bottom"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".presentation.scrollingprofile.ScrollingProfileActivity"
            android:label="@string/title_activity_scrolling_profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".presentation.circularreveal.postlollipop.CircularRevealSharedElementActivity"
            android:label="@string/title_activity_circular_reveal_shared_element"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".presentation.circularreveal.postlollipop.CircularRevealSharedElementListActivity"></activity>
    </application>

</manifest>